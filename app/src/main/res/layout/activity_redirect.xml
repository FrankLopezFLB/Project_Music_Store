<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical"
    android:paddingLeft="30sp"
    android:paddingRight="30sp"
    tools:context=".RedirectActivity">

  <TextView
      android:id="@+id/textView7"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20sp"
      android:layout_marginBottom="30sp"
      android:text="ADMINISTRAR INFORMACIÓN"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="25sp"
      android:textStyle="bold" />

  <Button
      android:id="@+id/btnRedirectPruductos"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10sp"
      android:layout_marginBottom="15sp"
      android:background="@drawable/radio_boton"
      android:drawableRight="@drawable/icono3"
      android:padding="20sp"
      android:text="Registrar Productos"
      android:textAllCaps="false"
      android:textColor="#000000"
      android:textSize="20sp" />

  <Button
      android:id="@+id/btnRedirectTrabajador"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15sp"
      android:layout_marginBottom="15sp"
      android:background="@drawable/radio_boton"
      android:drawableRight="@drawable/icono3"
      android:padding="20sp"
      android:text="Registrar Trabajador"
      android:textAllCaps="false"
      android:textColor="#000000"
      android:textSize="20sp" />

  <Button
      android:id="@+id/btnRedirectCliente"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15sp"
      android:layout_marginBottom="15sp"
      android:background="@drawable/radio_boton"
      android:drawableRight="@drawable/icono3"
      android:padding="20sp"
      android:text="Registrar Cliente"
      android:textAllCaps="false"
      android:textColor="#000000"
      android:textSize="20sp" />

  <Button
      android:id="@+id/btnRedirectServicios"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15sp"
      android:layout_marginBottom="15sp"
      android:background="@drawable/radio_boton"
      android:drawableRight="@drawable/icono3"
      android:padding="20sp"
      android:text="Registrar Servicios"
      android:textAllCaps="false"
      android:textColor="#000000"
      android:textSize="20sp" />

  <Button
      android:id="@+id/btnRedirectEnvios"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15sp"
      android:layout_marginBottom="15sp"
      android:background="@drawable/radio_boton"
      android:drawableRight="@drawable/icono3"
      android:padding="20sp"
      android:text="Consultar envíos"
      android:textAllCaps="false"
      android:textColor="#000000"
      android:textSize="20sp" />
</LinearLayout>